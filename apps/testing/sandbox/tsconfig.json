{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"rootDir": ".",
		"types": ["bun"]
	},
	"include": ["*.ts"],
	"exclude": ["node_modules", "dist"]
}
