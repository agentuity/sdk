{
	"extends": "../../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./.agentuity",
		"rootDir": ".",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"lib": ["ESNext", "DOM"],
		"types": ["bun-types"],
		"skipLibCheck": true,
		"paths": {
			"@agents/*": ["./src/agent/*"],
			"@test/*": ["./src/test/*"],
			"@agentuity/runtime": ["./src/generated/router.ts"]
		}
	},
	"include": ["src/**/*", "app.ts", ".agentuity/.agentuity_types.ts"],
	"exclude": ["node_modules", ".agentuity", "test", "src/generated/routes.ts"]
}
