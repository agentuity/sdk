{
	"name": "@agentuity/cli",
	"version": "0.0.51",
	"license": "Apache-2.0",
	"author": "Agentuity employees and contributors",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./dist/index.d.ts",
	"bin": {
		"agentuity": "./bin/cli.ts"
	},
	"exports": {
		".": {
			"import": "./src/index.ts",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"AGENTS.md",
		"README.md",
		"src",
		"dist",
		"bin"
	],
	"scripts": {
		"clean": "rm -rf dist",
		"build": "bunx tsc --build --emitDeclarationOnly --force",
		"typecheck": "bunx tsc --noEmit",
		"test": "bun scripts/test-create-flow.ts && bun scripts/test-exit-codes.ts && bun scripts/test-response-schema.ts && bun scripts/test-batch-reporting.ts && bun scripts/test-response-envelope.ts",
		"test:create": "bun scripts/test-create-flow.ts",
		"test:exit-codes": "bun scripts/test-exit-codes.ts",
		"test:response-schema": "bun scripts/test-response-schema.ts",
		"test:batch": "bun scripts/test-batch-reporting.ts",
		"test:envelope": "bun scripts/test-response-envelope.ts",
		"prepublishOnly": "bun run clean && bun run build"
	},
	"dependencies": {
		"@agentuity/core": "workspace:*",
		"@agentuity/server": "workspace:*",
		"@terascope/fetch-github-release": "^2.2.1",
		"acorn-loose": "^8.5.2",
		"adm-zip": "^0.5.16",
		"astring": "^1.9.0",
		"commander": "^14.0.2",
		"console-table-printer": "^2.15.0",
		"enquirer": "^2.4.1",
		"git-url-parse": "^16.1.0",
		"json-colorizer": "^3.0.1",
		"json5": "^2.2.3",
		"tar": "^7.5.2",
		"tar-fs": "^3.1.1",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@types/adm-zip": "^0.5.7",
		"@types/bun": "latest",
		"@types/tar-fs": "^2.0.4",
		"bun-types": "latest",
		"typescript": "^5.9.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
