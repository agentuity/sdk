{
	"name": "sdk-mono",
	"version": "0.0.1",
	"private": true,
	"workspaces": [
		"packages/*",
		"test-app"
	],
	"scripts": {
		"build": "bunx tsc --build --force && cd packages/core && bun run build && cd ../react && bun run build && cd ../bundler && bun run build && cd ../server && bun run build",
		"test": "bun test",
		"typecheck": "bunx tsc --build --dry",
		"clean": "rm -rf packages/*/dist packages/*/*.tsbuildinfo",
		"format": "bunx prettier */** --write --fix",
		"lint": "bunx eslint packages"
	},
	"devDependencies": {
		"@eslint/js": "^9.38.0",
		"@eslint/json": "^0.13.2",
		"@types/bun": "latest",
		"eslint": "^9.38.0",
		"eslint-plugin-react": "^7.37.5",
		"globals": "^16.4.0",
		"jiti": "^2.6.1",
		"prettier": "3.6.2",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"typescript": "^5.9.0",
		"typescript-eslint": "^8.46.2"
	},
	"dependencies": {}
}
