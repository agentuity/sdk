{
	"name": "@agentuity/server",
	"version": "0.0.1",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"clean": "rm -rf dist",
		"build": "bun build --target bun --outdir dist src/index.ts --env AGENTUITY_PUBLIC_* && bunx tsc --build --force",
		"typecheck": "bunx tsc --noEmit",
		"prepublishOnly": "bun run clean && bun run build"
	},
	"dependencies": {
		"@agentuity/core": "workspace:*",
		"hono": "^4.10.3"
	},
	"devDependencies": {
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"typescript": "^5.9.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0"
	}
}
