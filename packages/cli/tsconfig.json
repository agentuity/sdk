{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"paths": {
			"@agentuity/core": ["../core/src"],
			"@agentuity/server": ["../server/src"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/**/__tests__/**/*"],
	"references": [{ "path": "../core" }, { "path": "../server" }]
}
